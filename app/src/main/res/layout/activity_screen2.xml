<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screen2"
    android:orientation="vertical"
    android:weightSum="1"
    android:background="@color/black">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_weight="0.075">


        <TextView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="Sign In"
            android:onClick="signin"
            android:gravity="right"
            android:textSize="23dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.001">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_weight="0.25"
        android:layout_gravity="center">

        <ImageView
            android:layout_width="210dp"
            android:layout_height="170dp"
            android:layout_centerInParent="true"
            android:padding="20dp"
            android:layout_marginEnd="0dp"
            android:layout_gravity="center"
            android:src="@drawable/musify"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.001">

    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_weight="0.05"
        android:layout_gravity="center">

        <TextView
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="Musify"
            android:textColor="@color/white"
            android:textSize="40dp"
            android:gravity="center">

        </TextView>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.001">

    </LinearLayout>

    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="400dp"
        android:layout_height="30dp"
        android:layout_weight="0.075"
        android:gravity="center">



        <EditText
            android:id="@+id/etname"
            android:layout_width="370dp"
            android:layout_height="42dp"
            android:background="@drawable/rounded_text"
            android:ems="10"
            android:inputType="textPersonName"
            android:padding="12dp"
            android:text="  Name"

            android:textColor="#FFC20F" />



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_weight="0.001">

    </LinearLayout>



    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="30dp"
        android:layout_weight="0.075"
        android:gravity="center"
        android:layout_gravity="center">


        <EditText
            android:id="@+id/etEmail"
            android:layout_width="375dp"
            android:layout_height="45dp"
            android:ems="10"
            android:background="@drawable/rounded_text"
            android:inputType="textEmailAddress"
            android:text="  Email"
            android:padding="12dp"
            android:textColor="#FFC20F"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_weight="0.001">

    </LinearLayout>

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="30dp"
        android:layout_weight="0.075"
        android:gravity="center"
        android:layout_gravity="center">


        <EditText
            android:background="@drawable/rounded_text"
            android:id="@+id/pass"
            android:layout_width="375dp"
            android:layout_height="45dp"
            android:ems="10"
            android:text="  Password"
            android:padding="12dp"
            android:textColor="#FFC20F"
            android:inputType="textVisiblePassword"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_weight="0.001">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_weight="0.025">

        <TextView
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="    Gender"
            android:textColor="#FFC20F"
            android:textSize="20dp"
            android:gravity="left">

        </TextView>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_weight="0.001">

    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_weight="0.2"
        android:weightSum="3">

        <RelativeLayout
            android:layout_width="30dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:gravity="right">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:src="@drawable/male_icon"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="30dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:src="@drawable/female_icon"/>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="20dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:gravity="left">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:src="@drawable/prefer_not_to_say_gender"/>

        </RelativeLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_weight="0.1"
        android:weightSum="1">

        <RelativeLayout
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_weight="0.1"
            android:gravity="center">


            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:background="@color/white" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_weight="0.9">


            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="I would like to receive your newsletter and other promotional information."
                android:textColor="@color/white" />
        </RelativeLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_weight="0.001">

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_weight="0.05"
        android:gravity="center">


        <Button
            android:id="@+id/signup"
            app:backgroundTint="#FFC20F"
            app:cornerRadius="30dp"
           android:onClick="signup"
            android:layout_width="300dp"
            android:layout_height="55dp"
            android:text="Sign Up" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_weight="0.001">

    </LinearLayout>


</LinearLayout>